<div class="board">
  <% board.each_row do |row| %>
    <div class="row">
      <% row.each do |square| %>
        <div class="square <%= square.state %>"></div>
      <% end %>
    </div>
  <% end %>
</div>

<br/>
<% board.tanks.each do |tank| %>
  <div><%= tank.stats %></div>
<% end %>

<br/>
<a href="/boards/<%= board.name %>/turn">Turn</a> |
<a href="/boards/<%= board.name %>/reset">Reset</a>
